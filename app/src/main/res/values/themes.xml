<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Supervend" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_indigo</item>
        <item name="colorPrimaryVariant">@color/light_indigo_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_indigo</item>
        <item name="colorSecondaryVariant">@color/dark_indigo_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">@color/black</item>
        <item name="backgroundColor">@color/off_white</item>
    </style>

    <style name="Theme.Supervend.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Supervend.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="toolbarStyle">@style/custom_toolbar</item>
    </style>

    <style name="Theme.Supervend.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?textFillColor</item>
    </style>
</resources>